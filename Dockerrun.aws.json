{
    "AWSEBDockerrunVersion": 2,
    "volumes" : [
       {
          "host" : {
             "sourcePath" : "/opt/nginx-proxy/conf.d"
          },
          "name" : "nginxConfVolume"
       }
    ],
    "containerDefinitions": [
        {
           "name":"nginx-proxy",
           "image":"nginx:stable-alpine",
           "logConfiguration": {
               "logDriver": "awslogs",
               "options": {
                   "awslogs-group": "/aws/elasticbeanstalk/Test2-env-1/redash",
                   "awslogs-region": "ap-northeast-1",
                   "awslogs-stream-prefix": "nginx-proxy"
                }
            },
            "links": [
                "redash-server:redash-server"
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "essential": true,
            "memory": 512,
            "mountPoints": [
                {
                   "containerPath": "/etc/nginx/conf.d",
                   "sourceVolume":"nginxConfVolume"
                },
                {
                   "sourceVolume": "awseb-logs-nginx-proxy",
                   "containerPath": "/var/log/nginx"
                }
            ]
        },
        {
            "name": "redash-server",
            "image": "redash/redash:5.0.2.b5486",
            "command": [
                "server"
            ],
            "environment": [
                {
                    "name": "PYTHONUNBUFFERED",
                    "value": "0"
                },
                {
                    "name": "REDASH_LOG_LEVEL",
                    "value": "INFO"
                },
                {
                    "name": "REDASH_RATELIMIT_ENABLED",
                    "value": "false"
                }
            ],
            "secrets": [
                {
                  "name": "REDASH_DATABASE_URL",
                  "valueFrom": "REDASH_DATABASE_URL"
                },
                {
                  "name":"REDASH_REDIS_URL",
                  "valueFrom":"REDASH_REDIS_URL"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/aws/elasticbeanstalk/Test2-env-1/redash",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "server"
                }
            },
            "portMappings": [
                {
                    "hostPort": 5000,
                    "containerPort": 5000
                },
                {
                    "hostPort": 5678,
                    "containerPort": 5678
                }
            ],
            "essential": true,
            "memory": 512
        },
        {
            "name": "redash-worker",
            "image": "redash/redash:5.0.2.b5486",
            "essential": true,
            "memory": 512,
            "dependsOn": [
                {
                    "containerName": "redash-server",
                    "condition": "START"
                }
            ],
            "command": [
                "scheduler"
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/aws/elasticbeanstalk/Test2-env-1/redash",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "worker"
                }
            },
            "environment": [
                {
                    "name": "PYTHONUNBUFFERED",
                    "value": "0"
                },
                {
                    "name": "REDASH_LOG_LEVEL",
                    "value": "INFO"
                },
                {
                    "name": "REDASH_RATELIMIT_ENABLED",
                    "value": "false"
                },
                {
                    "name": "QUEUES",
                    "value": "queries,scheduled_queries,celery,schemas"
                },
                {
                    "name": "WORKERS_COUNT",
                    "value": "2"
                }
            ],
            "secrets": [
                {
                  "name": "REDASH_DATABASE_URL",
                  "valueFrom": "REDASH_DATABASE_URL"
                },
                {
                  "name":"REDASH_REDIS_URL",
                  "valueFrom":"REDASH_REDIS_URL"
                }
            ],
        }
    ]
}


